{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2018",
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/*",
    "src/utils/*",
    "src/const/*",
    "src/keywords.json",
    "src/widgets/table.ts",
    "src/widgets/form.ts",
    "src/widgets/connector.ts",
  ]
}